<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".Colocviu1_2MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_term"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_button"
        android:padding="10dp"
        android:hint="Next Term" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_button"
        app:layout_constraintStart_toEndOf="@+id/next_term"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#D3D3D3"
        app:cornerRadius="1dp"
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Add" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sum"
        android:padding="10dp"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@+id/next_term"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/compute_button"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/sum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#D3D3D3"
        app:cornerRadius="1dp"
        android:textColor="@color/black"
        android:text="Compute" />


</androidx.constraintlayout.widget.ConstraintLayout>